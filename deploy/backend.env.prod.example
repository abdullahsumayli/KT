# KitchenTech Backend - Production Environment Variables
# Copy this file to .env and replace all __REPLACE__ values

# Environment Mode
APP_ENV=prod

# Security
# Generate a secure random key (minimum 32 characters):
# python -c "import secrets; print(secrets.token_urlsafe(64))"
KT_SECRET_KEY=__REPLACE_WITH_SECURE_RANDOM_KEY_MIN_32_CHARS__

# Database
# Production PostgreSQL connection
KT_DATABASE_URL=postgresql+psycopg2://kt_user:kt_password@127.0.0.1:5432/kitchentech_prod

# CORS - Allowed Origins
# Add all domains that will access the API
KT_ALLOWED_ORIGINS=https://souqmatbakh.com,https://www.souqmatbakh.com

# Debug Mode (MUST be False in production)
KT_DEBUG=False

# Rate Limiting
KT_RATE_LIMIT_ENABLED=True
KT_RATE_LIMIT_PER_MINUTE=60

# JWT Configuration
KT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
KT_MAX_UPLOAD_SIZE=5242880
KT_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# Logging
KT_LOG_LEVEL=INFO
